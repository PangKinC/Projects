@model RestaurantLocator.Models.RestaurantView


@{
    ViewBag.Title = "RCReview";
}


<h3> Write a review for @Model.res.Name </h3>


@using (Html.BeginForm())
{
    <hr />
    <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.rate.Restaurant_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.res.ID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.res.ID)
                    @Html.ValidationMessageFor(model => model.rate.Restaurant_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.rate.Review, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.rate.Review, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.rate.Review, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn-default" />
                </div>
            </div>
        </div>
}

@{ Html.RenderAction("ReviewList"); }

<br />
@Html.ActionLink("Back to Index", "Index")
