@model RestaurantLocator.Models.RestaurantView


@{
    ViewBag.Title = "Index";
}

<h3> <p class="centerAlign"> Administrator Tools </p> </h3>

<h4> List of Restaurants </h4>
<br />
<p class="rightAlign"> @Html.ActionLink("Add New Restaurant", "CreateData") </p>
    
    <table cellspacing="0" cellpadding="5" rules="all" class="searchResults">
        <tr>
            <th> Name </th>
            <th> Address </th>
            <th> Phone Number </th>
            <th> Read / Update / Delete </th>
        </tr>

    @foreach (var restaurant in Model.allRes)
    {
        <tr>
            <td> @restaurant.Name </td>
            <td>
                @restaurant.Address <br/>
                @restaurant.City <br/>
                @restaurant.Country <br/>
                @restaurant.Postcode <br/>    
            </td>
            <td> @restaurant.Phone_Number </td>
            <td>
                @Html.ActionLink("Restaurant Details", "ReadData", new { id = restaurant.ID }) <br/>
                @Html.ActionLink("Update Restaurant Details", "UpdateData", new { id = restaurant.ID }) <br/>
                @Html.ActionLink("Delete Restaurant", "DeleteData", new { id = restaurant.ID }) <br/>
                @Html.ActionLink("Review Restaurant", "RCReview", new { id = restaurant.ID }) <br />
            </td>
        </tr>
    }
    </table>

<h4> List of Reviews </h4>
<br />
<table cellspacing="0" cellpadding="5" rules="all" class="searchResults">
    <tr>
        <th> ID </th>
        <th> Review </th>
        <th> Create / Read / Update </th>
    </tr>

    @foreach (var review in Model.allRate)
    {
        <tr>
            <td> @review.Restaurant_ID </td>
            <td> @review.Review </td>
            <td>
                @Html.ActionLink("Review Restaurant", "RCReview", new { id = review.ID }) <br />
                @Html.ActionLink("Delete Review", "DeleteReview", new { id = review.ID }) <br />
            </td>
        </tr>
    }
</table>

